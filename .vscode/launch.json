    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch with env vars",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "ksbuilder.go",
            "env": {
                "KSBUILDER_DIR": "certs",
                "KSBUILDER_OUT": "ssl.jks"
            }
        },{
            "name": "Launch with cli args",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "ksbuilder.go",
            "args": [
                "--dir certs",
                "--out ssl.jks"
            ]
        }
    ]
}